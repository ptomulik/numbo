Import(['env'])

from SCons.Util import CLVar

tests = [
    'opencl/util/type_to_string.t.h',
    'opencl/kernels/ppfun_1d_nu.t.h',
]

env.CxxTest('../check-libnumbo_opencl', tests,
           LIBS = CLVar(),
           CXXTEST_CPPPATH = ['..'],
           CXXTEST_LIBPATH = env.get('LIBPATH', CLVar()),
           CXXTEST_TARGET = 'check-libnumbo_opencl')

env.Alias('check', [ 'check-libnumbo_opencl' ])
env.AlwaysBuild('check-libnumbo_opencl')

